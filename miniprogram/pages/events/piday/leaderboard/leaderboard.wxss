/* miniprogram/pages/bitday/leader board/index.wxss */
.leaderboard{
  width: 90%;
  height: 80vh;
  margin-top: 20px;
  margin-left:5%;
  border-radius: 10px;
  /* background-color: rgba(0, 0, 0, 0.274); */
  background-color: #FFFFFF;
}

.day{
  width: 100%;
  text-align: center;
  font-weight: bold;
  margin-top: 15px;
  font-size: 20px;
}

.yourRank{
  width: 100%;
  margin-top:10px;
  text-align: center;
}

.bar{
  position: absolute;
  width: 100%;
  height:2px;
  background-color:black;
}

.username{
  position: absolute;
  left:20px;
}
.userclass{
  position: absolute;
  left:200px;
}
.userpoints{
  position: absolute;
  right:20px;
}

.userarea{
  margin-top:10px;
  display: flex;
  flex-direction: column;
  padding: 10px 0;
}

#pi-day-top-container {
  padding: 0 16px;
  display: flex;
  justify-content: space-between;
}

@media (prefers-color-scheme: dark) {
  .leaderboard{
    width: 90%;
    height: 80vh;
    margin-top: 20px;
    margin-left:5%;
    border-radius: 10px;
    /* background-color: rgba(0, 0, 0, 0.274); */
    background-color: #1C1C1E;
  }
  .yourRank{
    width: 100%;
    margin-top:10px;
    text-align: center;
    color: white;
  }
  .username{
    position: absolute;
    left:20px;
    color: white;
  }
  .userclass{
    position: absolute;
    left:200px;
    color: white;
  }
  .userpoints{
    position: absolute;
    right:20px;
    color: white;
  }
}