/* miniprogram/pages/bitday/index.wxss */
.eventHeader{
  width: 90%;
  height: 25vh;
  margin-left: 5%;
  background-color:rgb(255, 255, 255);
  border-radius: 15px;
  margin-top:20px;
  box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.2);
  text-align: center;
  display: table;

  font-size: 3vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.eventHeaderSmall{
  width: 90%;
  height: 15vh;
  margin-left: 5%;
  background-color:rgb(255, 255, 255);
  border-radius: 15px;
  margin-top:20px;
  box-shadow: 0 0 2px 2px rgba(0, 0, 0, 0.2);
  text-align: center;
  display: table;

  font-size: 3vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.day{
  width: 100%;
  text-align: center;
  font-weight: bold;
  margin-top: 20px;
  font-size: 20px;
}

.popup{
  background: white;
  z-index: 91;
  position: fixed;
}

.closePopup {
  width: 20px;
  position: absolute;
  top: 12px;
  right: 12px;
  font-size: 20px;
  z-index: 5;
}

.mini{
  height: 50%;
  width: calc(100% - 50px);
  min-width: 250px;
  max-width: 500px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 20px;
  text-align: center;
}


.overlay {
  height: 100vh;
  width: 100vw;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  z-index: 90;
}

.inputArea{
  background-color: rgba(117, 117, 117, 0.377);
  width: 50%;
  height: 30px;
  margin-left:25%;
  color: black;
  margin-top: 10px;
}

.regular{
  height: 90%;
  width: calc(100% - 50px);
  min-width: 250px;
  max-width: 500px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 20px;
  text-align: center;
}

.eventTitle{
  font-size: 30px;
  font-weight: 600;
}

.bar{
  width: 80%;
  margin-left:10%;
  height:2px;
  background-color:black;
}

.date{
  margin-left:30px;
  font-size:20px;
  margin-top: 30px;
}

.scheduleItem{
  text-align: center;
  font-size: 13px;
}

.questionItem{
  width:50px;
  height:50px;
  border-radius: 1px;
  background-color: #dddddd;
  margin-left: 20px;
  margin-top:10px;
  display: inline-block;
}

.questoinItemNumber{
  font-size: 25px;
  width: 100%;
  text-align: center;
  margin-top: 10px;
}

.questionsDone{
  width:100%;
  position: absolute;
  font-size: 30px;
  text-align: center;
}

.scanBtn{
  margin-top:10px;
}

/* miniprogram/pages/admin/index.wxss */

.title{
  width: 100%;
  text-align: center;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  font-weight: 700;
  font-size: 40px;
}

.item{
  position: absolute;
  width: 40%;
  height: 300px;
  background-color:#52b69a;
  border-radius: 20px;
  box-shadow: 0 0 8px 4px rgba(0, 0, 0, 0.2);
  text-align: center;
}

.coverImage{
  margin-top:10px;
  width: 80%;
}


.toggleButton{
  position:absolute;
  bottom:10px;
}

.questions{
  height: 90%;
  width: calc(100% - 50px);
  min-width: 250px;
  max-width: 500px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 20px;
}


.itemTitle{
  font-weight: 600;
}

.itemBtn{
  width: 90%;
  background-color:pink;
  margin-top: 5px;
  border-radius: 5px;
  height:30px;
  padding-top: 10px;
  display: inline-block;
}

.blockArea{
  min-height:50px;
  width:42.5%;
  margin-left: 5%;
  background-color: peru;
  display: inline-block;
  margin-top: 5px;
}

.addBlockArea{
  width: 90%;
  margin-top: 5px;
  margin-left: 5%;
  background-color: peru;
  text-align: center;
}

.difficultySlider{
  width: 40%;
  height: 20px;
  display: inline-block;
}

.difficultyStars{
  display: inline-block;
  font-size: 20px;
  width: 40%;
  text-align: center;
}

.questionItem2{
  height:30px;
  width:30px;
  line-height: 30px;
  background-color: #858587;
  border-radius: 4px;
  text-align: center;
  display: inline-block;
  margin-left: 7px;
  margin-right: 7px;
  box-shadow: 0 0 8px 3px rgba(0, 0, 0, 0.2);
  margin-top:10px;
  font-size: 15px;

}

.subjectTitle{
  background-color: pink;
  text-align: center;
  margin-top: 10px;
}



.chooseQuestionsArea{
  margin-left:5px;
  margin-top:5px;
  width:200vw;
  height:50px;
  display: flex;
}


.changingQuestion{
  margin-top: 10px;
  width: 90%;
  text-align: center;
  margin-left: 5%;
}

.imgQuestion{
  width:120px;
  margin-left:calc( (100% - 280px) / 2); 
  height:145px;
  margin-top:10px;
}

.submitChanges{
  margin-top: 10px;
  margin-bottom: 20px;
  position: relative;
  background-color: pink;
  text-align: center;
  box-shadow: 0 0 8px 3px rgba(0, 0, 0, 0.2);
}

.topWeekNum{
  display: inline-block;
  font-size: 15px;
  margin-left: 10px;
}


.changeTypeButton{
  height:30px;
  width:20%;
  line-height: 30px;
  background-color: white;
  border-radius: 4px;
  text-align: center;
  display: inline-block;
  margin-left: 2.5%;
  margin-right: 2.5%;
  box-shadow: 0 0 8px 3px rgba(0, 0, 0, 0.2);
  margin-top:10px;
  font-size: 15px;
}

.questionArea{
  height: calc(100% - 100px);
  width: 100%;
}

.mcqChoice{
  width: 100%;
  height: 50px;
  text-align: center;
}

.mcqAnswers{
  position: relative;
  width: 100%;
}

.selectChoice{
  position: absolute;
  right:10px;
  font-size: 30px;
  z-index: 2;
}


.answerInput{
  margin-top: 10px;
  display: flex;
  justify-content: center;
  position: relative;
  height:200px;
  width:90%;
  left:5%;
  background-color: #C9B8C0;
  text-align:center;
}

.answerText{
  font-family: 'REEJI-ZhenyanGB2.0';
  color:#222222;
}

#pi-day-top-container {
  padding: 0 16px;
  display: flex;
  justify-content: space-between;
}

#pi-day-scroll {
  height: 100vh;
}

#pi-day-top-right-container {
  display: flex;
}

#pi-day-top-scan-button-container {
  width: 41px;
  height: 41px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--button-background-color);
  border-radius: 50%;
  margin-left: 10px;
}

#pi-day-top-scan-button-image {
  width: 100%;
  height: 100%;
}

@media (prefers-color-scheme: dark) {
    #pi-day-top-scan-button-image {
        filter: invert();
    }
}

#pi-day-info-container {
  padding: 0 16px;
  margin-bottom: 6px;
  margin-top: 20px;
  display: flex;
  align-items: center;
  flex-direction: column;
}

#pi-day-trivia-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;
  margin-top: 15px;
  padding: 15px;
  padding-right: 15px;
  border-radius: 20px;
  background-color: var(--subcontainer-background);
}

#pi-day-question-number {
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10px;
  border-radius: 50%;
  font-weight: bold;
  font-size: 25px;
}

.pi-day-question-unanswered {
  background-color: #E5E5E5;
}

.pi-day-question-correct {
  background-color: #A0D911;
}

.pi-day-question-wrong {
  background-color: #FF4C4C;
}

#comment-text-container {
  display: flex;
  align-items: center;
  text-align: center;
}

#comment-text {
  font-size: 22px;
  font-weight: bold;
}

#comment-text-small {
  margin-top: 10px;
  font-size: 15px;
  font-weight: bold;
}