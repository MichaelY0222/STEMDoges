.secure-code-canvas {
  height: 184px;
  width: 184px;
}
.secure-code-preview-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.secure-code-preview-caption {
  color: var(--secondary);
  font-weight: 500;
  font-size: 12px;
  text-align: center;
  line-height: 15px;
  margin: 0 30px;
  padding-top: 8px;
  margin-bottom: 9px;
}
.secure-code-preview-title {
  font-weight: bold;
  font-size: 20px;
  line-height: 24px;
  margin: 0 30px;
  padding-bottom: 10px;
  margin-top: 13px;
  text-align: center;
}